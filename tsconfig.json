{
    "compilerOptions": {
      "target": "es2015",
      "module": "commonjs",
      "jsx": "react",
      "experimentalDecorators": true,
      "sourceMap": true,
      "baseUrl": ".",
      "paths": {
        "src/*": ["./src/*"],
        "tools/*": ["./tools/*"]
      },
      "typeRoots": [
        "TODO(rminster) - add custom-types here and remove postinstall copy",
        "node_modules/@types"
      ],
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true
  
    },
    "exclude": [
      "node_modules"
    ],
    "filesGlob": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/**/*.d.ts"
    ],
    "awesomeTypescriptLoaderOptions": {
      "useCache": true,
      "useBabel": true
    }
  }
  